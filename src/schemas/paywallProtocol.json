{
  "protocol": "https://lightningPaywall.app/protocol",
  "types": {
    "content": {
      "schema": "content",
      "dataFormats": ["application/json"]
    },
    "metadata": {
      "schema": "contentMetadata",
      "dataFormats": ["application/json"]
    },
    "audio": {
      "schema": "audio",
      "dataFormats": ["audio/mp3"]
    },
    "subscriber": {
      "schema": "subcriber",
      "dataFormats": ["application/json"]
    },
    "paywall": {
      "schema": "paywall",
      "dataFormats": ["application/json"]
    },
    "creatorProfile": {
      "schema": "creatorProfile",
      "dataFormats": ["application/json"]
    }
  },
  "structure": {
    "profile": {
      "$actions": [
        { "who": "anyone", "can": "read" },
        { "who": "author", "of": "profile", "can": "write" }
      ],
      "profilePicture": {
        "$actions": [
          { "who": "anyone", "can": "read" },
          { "who": "author", "of": "profile", "can": "write" }
        ]
      }
    },
    "content": {
      "$actions": [
        {
          "who": "recipient",
          "of": "content/subscriber",
          "can": "read"
        },
        {
          "who": "anyone",
          "can": "write"
        }
      ],
      "metadata": {
        "$actions": [
          { "who": "anyone", "can": "read" },
          { "who": "anyone", "can": "write" }
        ]
      },
      "paywall": {
        "$actions": [
          { "who": "anyone", "can": "read" },
          { "who": "anyone", "can": "write" }
        ]
      },
      "audio": {
        "$actions": [
          {
            "who": "recipient",
            "of": "content/subscriber",
            "can": "read"
          },
          {
            "who": "author",
            "of": "content",
            "can": "write"
          }
        ]
      },
      "subscription": {
        "$actions": [
          {
            "who": "author",
            "of": "content",

            "can": "write"
          },
          {
            "who": "author",
            "of": "content",
            "can": "read"
          }
        ]
      }
    }
  }
}
