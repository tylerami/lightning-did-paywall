{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Content",
  "type": "object",
  "required": ["title", "body"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the content."
    },
    "subtitle": {
      "type": "string",
      "description": "The subtitle of the content."
    },
    "body": {
      "type": "string",
      "description": "The body of the content."
    },
    "paywall": {
      "type": "object",
      "required": ["satsAmount", "lightningAddress"],
      "properties": {
        "satsAmount": {
          "type": "number",
          "description": "The amount of satoshis required to access the content."
        },
        "lightningAddress": {
          "type": "string",
          "description": "The Lightning Network address for payment."
        }
      }
    }
  }
}
